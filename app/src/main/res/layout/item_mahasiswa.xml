<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Akun Mahasiswa"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Nama Mahasiswa :"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Email Mahasiswa :"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/emailMahasiswa" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NIM Mahasiswa: "
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/nimMahasiswa" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password Mahasiswa :"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/passwordMahasiswa" />
  <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password Mahasiswa :"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/confirmPassword" />

    <TextView
        android:id="@+id/namaMahasiswa"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:text="Ini Nama Mahasiswa"

        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <TextView
        android:id="@+id/emailMahasiswa"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Ini Email Mahasiswa"
        app:layout_constraintStart_toStartOf="@+id/namaMahasiswa"
        app:layout_constraintTop_toBottomOf="@+id/namaMahasiswa" />

    <TextView
        android:id="@+id/nimMahasiswa"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Ini NIM"
        app:layout_constraintStart_toStartOf="@+id/namaMahasiswa"
        app:layout_constraintTop_toBottomOf="@+id/emailMahasiswa" />

    <TextView
        android:id="@+id/passwordMahasiswa"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:text="Ini Password"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/nimMahasiswa" />

    <TextView
        android:id="@+id/confirmPassword"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Ini confirm password"
        app:layout_constraintStart_toStartOf="@+id/namaMahasiswa"
        app:layout_constraintTop_toBottomOf="@+id/passwordMahasiswa" />

    <Button
        android:id="@+id/btnHapus"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:background="@drawable/background_btn_hapus"
        app:layout_constraintTop_toBottomOf="@id/confirmPassword"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"
        android:text="Hapus"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/btnEdit"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:background="@drawable/background_btn_hapus_putih"
        app:layout_constraintTop_toTopOf="@id/btnHapus"
        app:layout_constraintEnd_toStartOf="@id/btnHapus"
        android:layout_marginEnd="20dp"
        android:text="Edit"
        android:textColor="@color/white"/>


</androidx.constraintlayout.widget.ConstraintLayout>