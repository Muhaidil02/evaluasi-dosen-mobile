<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Akun Dosen"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Nama Dosen :"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Email Dosen :"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/emailDosen" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alamat Dosen: "
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/alamatDosen" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lama Bekerja :"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/lamaBekerjaDosen" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Status Kepegawaian : "
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/statusKepegawaianDosen" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="jenis kelmain : "
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/jenisKelaminDosen" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="jabatan: "
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/jabatanFungsionalDosen" />
 <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Password: "
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/password" />

    <TextView
        android:id="@+id/namaDosen"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:text="Ini Nama Dosen"

        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <TextView
        android:id="@+id/emailDosen"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Ini Email Dosen"
        app:layout_constraintStart_toStartOf="@+id/namaDosen"
        app:layout_constraintTop_toBottomOf="@+id/namaDosen" />

    <TextView
        android:id="@+id/alamatDosen"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Ini Almt Dosen"
        app:layout_constraintStart_toStartOf="@+id/namaDosen"
        app:layout_constraintTop_toBottomOf="@+id/emailDosen" />

    <TextView
        android:id="@+id/lamaBekerjaDosen"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:text="Ini Lama Bekerja Dosen"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/alamatDosen" />

    <TextView
        android:id="@+id/statusKepegawaianDosen"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Ini Lama Bekerja Dosen"
        app:layout_constraintStart_toStartOf="@+id/namaDosen"
        app:layout_constraintTop_toBottomOf="@+id/lamaBekerjaDosen" />
  <TextView
        android:id="@+id/jenisKelaminDosen"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Ini jenis kelamin"
        app:layout_constraintStart_toStartOf="@+id/namaDosen"
        app:layout_constraintTop_toBottomOf="@+id/statusKepegawaianDosen" />

 <TextView
        android:id="@+id/jabatanFungsionalDosen"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Ini jabatan"
        app:layout_constraintStart_toStartOf="@+id/namaDosen"
        app:layout_constraintTop_toBottomOf="@+id/jenisKelaminDosen" />
<TextView
        android:id="@+id/password"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Ini password"
        app:layout_constraintStart_toStartOf="@+id/namaDosen"
        app:layout_constraintTop_toBottomOf="@+id/jabatanFungsionalDosen" />

<Button
    android:id="@+id/btnHapus"
    android:layout_width="90dp"
    android:layout_height="35dp"
    android:background="@drawable/background_btn_hapus"
    app:layout_constraintTop_toBottomOf="@id/password"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginEnd="50dp"
    android:text="Hapus"
    android:textColor="@color/white"
    android:layout_marginTop="30dp"/>

<Button
    android:id="@+id/btnEditDosen"
    android:layout_width="90dp"
    android:layout_height="35dp"
    android:background="@drawable/background_btn_hapus_putih"
    app:layout_constraintTop_toTopOf="@id/btnHapus"
    app:layout_constraintEnd_toStartOf="@id/btnHapus"
    android:layout_marginEnd="20dp"
    android:text="Edit"
    android:textColor="@color/white"/>


</androidx.constraintlayout.widget.ConstraintLayout>